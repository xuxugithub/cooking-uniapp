/* pages/search/search.scss */
.container.data-v-cdfa925e {
  padding: 20rpx;
  padding-bottom: 140rpx; /* 为底部导航栏留出空间 */
}
/* 搜索栏 */
.search-bar.data-v-cdfa925e {
  margin-bottom: 30rpx;
}
.search-input-wrapper.data-v-cdfa925e {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 80rpx;
}
.search-input.data-v-cdfa925e {
  flex: 1;
  font-size: 28rpx;
  height: 100%;
}
.search-btn.data-v-cdfa925e {
  color: #ff6b35;
  font-size: 28rpx;
  margin-left: 20rpx;
}
/* 搜索建议 */
.search-suggestions.data-v-cdfa925e {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}
.history-section.data-v-cdfa925e {
  margin-bottom: 40rpx;
}
.section-header.data-v-cdfa925e {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.section-title.data-v-cdfa925e {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}
.clear-btn.data-v-cdfa925e {
  font-size: 24rpx;
  color: #999;
}
.keywords-list.data-v-cdfa925e {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}
.keyword-item.data-v-cdfa925e {
  background: #f8f8f8;
  color: #666;
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}
.keyword-item.hot.data-v-cdfa925e {
  background: #fff2f0;
  color: #ff6b35;
}
/* 搜索结果 */
.search-results.data-v-cdfa925e {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.results-header.data-v-cdfa925e {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.results-count.data-v-cdfa925e {
  font-size: 26rpx;
  color: #666;
}
.results-list.data-v-cdfa925e {
  padding: 0 30rpx;
}
.result-item.data-v-cdfa925e {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.result-item.data-v-cdfa925e:last-child {
  border-bottom: none;
}
.result-image.data-v-cdfa925e {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.result-info.data-v-cdfa925e {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.result-name.data-v-cdfa925e {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.result-desc.data-v-cdfa925e {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.result-meta.data-v-cdfa925e {
  display: flex;
  gap: 20rpx;
  margin-bottom: 8rpx;
}
.result-difficulty.data-v-cdfa925e,
.result-time.data-v-cdfa925e,
.result-category.data-v-cdfa925e {
  font-size: 22rpx;
}
.result-time.data-v-cdfa925e,
.result-category.data-v-cdfa925e {
  color: #999;
}
.result-stats.data-v-cdfa925e {
  display: flex;
  gap: 20rpx;
  font-size: 20rpx;
  color: #ff6b35;
}
/* 空结果 */
.empty-results.data-v-cdfa925e {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.empty-icon.data-v-cdfa925e {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}
.empty-text.data-v-cdfa925e {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.empty-tip.data-v-cdfa925e {
  font-size: 24rpx;
  color: #ccc;
}
/* 加载状态 */
.load-more.data-v-cdfa925e,
.no-more.data-v-cdfa925e {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}
.loading.data-v-cdfa925e {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}