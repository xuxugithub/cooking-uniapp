/* pages/category/category.scss */
.container.data-v-4046d630 {
  padding: 0;
  padding-bottom: 160rpx; /* 为底部导航栏留出空间 */
  background: #f5f5f5;
  min-height: 100vh;
}
/* 分类列表 */
.categories-grid.data-v-4046d630 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}
.category-item.data-v-4046d630 {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 25rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
.category-item.data-v-4046d630:active {
  transform: translateY(-6rpx);
  box-shadow: 0 10rpx 35rpx rgba(255, 107, 53, 0.15);
}
.category-image.data-v-4046d630 {
  width: 100%;
  height: 220rpx;
}
.category-info.data-v-4046d630 {
  padding: 25rpx 20rpx;
  text-align: center;
}
.category-name.data-v-4046d630 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.3;
}
.category-desc.data-v-4046d630 {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}
/* 菜品列表 */
.back-bar.data-v-4046d630 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 20rpx;
  margin: 20rpx 20rpx 30rpx;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}
.back-btn.data-v-4046d630 {
  font-size: 30rpx;
  color: #ff6b35;
  font-weight: 500;
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  background: rgba(255, 107, 53, 0.1);
  transition: all 0.3s ease;
}
.back-btn.data-v-4046d630:active {
  background: rgba(255, 107, 53, 0.2);
}
.current-category.data-v-4046d630 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.dishes-grid.data-v-4046d630 {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}
.dish-item.data-v-4046d630 {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 25rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
.dish-item.data-v-4046d630:active {
  transform: translateY(-6rpx);
  box-shadow: 0 10rpx 35rpx rgba(255, 107, 53, 0.15);
}
.dish-image.data-v-4046d630 {
  width: 100%;
  height: 220rpx;
}
.dish-info.data-v-4046d630 {
  padding: 20rpx;
}
.dish-name.data-v-4046d630 {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.3;
}
.dish-meta.data-v-4046d630 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  align-items: center;
  gap: 8rpx;
}
.dish-difficulty.data-v-4046d630 {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(255, 107, 53, 0.1);
  font-weight: 500;
  flex-shrink: 0;
  color: #ff6b35;
}
.dish-time.data-v-4046d630 {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  flex-shrink: 0;
}
.dish-stats.data-v-4046d630 {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #ff6b35;
  gap: 8rpx;
}
.dish-views.data-v-4046d630,
.dish-collects.data-v-4046d630 {
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-weight: 500;
  flex: 1;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 加载状态 */
.load-more.data-v-4046d630,
.no-more.data-v-4046d630 {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 28rpx;
  background: #fff;
  margin: 30rpx 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}
.loading.data-v-4046d630,
.empty.data-v-4046d630 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}
.empty-icon.data-v-4046d630 {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}
.empty-text.data-v-4046d630 {
  font-size: 30rpx;
}