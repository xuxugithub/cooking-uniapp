/* pages/favorites/favorites.scss */
.container.data-v-b8bb0ac5 {
  padding: 20rpx;
  padding-bottom: 140rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.favorites-list.data-v-b8bb0ac5 {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.favorite-item.data-v-b8bb0ac5 {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}
.favorite-item.data-v-b8bb0ac5:last-child {
  border-bottom: none;
}
.favorite-image.data-v-b8bb0ac5 {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.favorite-info.data-v-b8bb0ac5 {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.favorite-name.data-v-b8bb0ac5 {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.favorite-desc.data-v-b8bb0ac5 {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.favorite-meta.data-v-b8bb0ac5 {
  display: flex;
  gap: 20rpx;
  margin-bottom: 8rpx;
}
.favorite-difficulty.data-v-b8bb0ac5,
.favorite-time.data-v-b8bb0ac5,
.favorite-category.data-v-b8bb0ac5 {
  font-size: 22rpx;
}
.favorite-time.data-v-b8bb0ac5,
.favorite-category.data-v-b8bb0ac5 {
  color: #999;
}
.favorite-stats.data-v-b8bb0ac5 {
  display: flex;
  gap: 20rpx;
  font-size: 20rpx;
  color: #ff6b35;
}
.favorite-actions.data-v-b8bb0ac5 {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.remove-btn.data-v-b8bb0ac5 {
  font-size: 24rpx;
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}
/* 加载和空状态 */
.loading.data-v-b8bb0ac5,
.empty.data-v-b8bb0ac5 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}
.empty-icon.data-v-b8bb0ac5 {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}
.empty-text.data-v-b8bb0ac5 {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.empty-tip.data-v-b8bb0ac5 {
  font-size: 24rpx;
  color: #ccc;
}