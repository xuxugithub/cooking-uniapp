  height: 100%;
  width: 100%;
  border-radius: 25rpx;
  overflow: hidden;
}
.banner-image.data-v-83a5a03c {
  width: 100%;
  height: 100%;
}
.banner-overlay.data-v-83a5a03c {
  position: absolute;
