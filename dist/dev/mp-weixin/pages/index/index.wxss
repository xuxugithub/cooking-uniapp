.more-text.data-v-83a5a03c {
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
}
.category-name.data-v-83a5a03c {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.3;
  text-align: center;
  max-width: 100%;
