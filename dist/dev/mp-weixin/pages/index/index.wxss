  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}
.category-icon.data-v-83a5a03c {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
}
.more-icon.data-v-83a5a03c {
