/* pages/profile/profile.scss */
.container.data-v-04d37cba {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 160rpx; /* 为底部导航栏留出空间 */
}
/* 用户信息区域 */
.user-section.data-v-04d37cba {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  padding: 80rpx 20rpx 60rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}
.user-section.data-v-04d37cba::before {
  content: '';
  position: absolute;
  top: -60%;
  right: -25%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}
.user-section.data-v-04d37cba::after {
  content: '';
  position: absolute;
  bottom: -40%;
  left: -15%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
}
.user-info.data-v-04d37cba {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}
.avatar.data-v-04d37cba {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 40rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}
.user-details.data-v-04d37cba {
  flex: 1;
}
.nickname.data-v-04d37cba {
  font-size: 40rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  line-height: 1.2;
}
.welcome.data-v-04d37cba {
  font-size: 26rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}
/* 用户关注统计 */
.user-follow-stats.data-v-04d37cba {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}
.user-follow-stats .stat-item.data-v-04d37cba {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}
.user-follow-stats .stat-number.data-v-04d37cba {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 5rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}
.user-follow-stats .stat-label.data-v-04d37cba {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}
.stat-divider.data-v-04d37cba {
  width: 2rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 10rpx;
}
.login-section.data-v-04d37cba {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}
.default-avatar.data-v-04d37cba {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 40rpx;
  opacity: 0.9;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  font-size: 70rpx;
  backdrop-filter: blur(15rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}
.login-info.data-v-04d37cba {
  flex: 1;
}
.login-title.data-v-04d37cba {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  line-height: 1.2;
}
.login-desc.data-v-04d37cba {
  font-size: 26rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}
.login-btn.data-v-04d37cba {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 60rpx;
  padding: 18rpx 35rpx;
  font-size: 28rpx;
  backdrop-filter: blur(15rpx);
  transition: all 0.3s ease;
  font-weight: 500;
}
.login-btn.data-v-04d37cba:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}
/* 功能菜单 */
.menu-section.data-v-04d37cba {
  padding: 20rpx;
  margin-top: 20rpx;
}
.menu-group.data-v-04d37cba {
  background: #fff;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.08);
}
.menu-item.data-v-04d37cba {
  display: flex;
  align-items: center;
  padding: 40rpx 35rpx;
  border-bottom: 1rpx solid #f8f8f8;
  background: #fff;
  border: none;
  border-radius: 0;
  text-align: left;
  font-size: 30rpx;
  transition: all 0.3s ease;
  position: relative;
}
.menu-item.data-v-04d37cba:last-child {
  border-bottom: none;
}
.menu-item.data-v-04d37cba::after {
  border: none;
}
.menu-item.data-v-04d37cba:active {
  background: #f8f8f8;
  transform: scale(0.98);
}
.menu-icon.data-v-04d37cba {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 30rpx;
  background: rgba(255, 107, 53, 0.1);
  border-radius: 50%;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.15);
}
.menu-text.data-v-04d37cba {
  flex: 1;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.menu-arrow.data-v-04d37cba {
  color: #ccc;
  font-size: 28rpx;
  font-weight: 600;
}
/* 用户列表弹窗样式 */
.user-list-modal.data-v-04d37cba {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.modal-content.data-v-04d37cba {
  background: #fff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}
.modal-header.data-v-04d37cba {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fafafa;
}
.modal-title.data-v-04d37cba {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.close-btn.data-v-04d37cba {
  font-size: 50rpx;
  color: #999;
  line-height: 1;
  padding: 10rpx;
  margin: -10rpx;
}
.user-list.data-v-04d37cba {
  max-height: 60vh;
  overflow-y: auto;
}
.user-item.data-v-04d37cba {
  display: flex;
  align-items: center;
  padding: 25rpx 40rpx;
  border-bottom: 1rpx solid #f8f8f8;
  transition: background-color 0.3s ease;
}
.user-item.data-v-04d37cba:last-child {
  border-bottom: none;
}
.user-item.data-v-04d37cba:active {
  background: #f8f8f8;
}
.user-avatar.data-v-04d37cba {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 25rpx;
  border: 2rpx solid #f0f0f0;
}
.user-info.data-v-04d37cba {
  flex: 1;
}
.user-nickname.data-v-04d37cba {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.follow-btn.data-v-04d37cba {
  padding: 12rpx 25rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 2rpx solid #ff6b35;
  color: #ff6b35;
  background: #fff;
  transition: all 0.3s ease;
}
.follow-btn.followed.data-v-04d37cba {
  background: #ff6b35;
  color: #fff;
}
.follow-btn.data-v-04d37cba:active {
  transform: scale(0.95);
}
.empty-list.data-v-04d37cba {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}
.empty-text.data-v-04d37cba {
  font-size: 28rpx;
  color: #999;
}
/* 让关注和粉丝数可点击 */
.user-follow-stats .stat-item.data-v-04d37cba {
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
}
.user-follow-stats .stat-item.data-v-04d37cba:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}